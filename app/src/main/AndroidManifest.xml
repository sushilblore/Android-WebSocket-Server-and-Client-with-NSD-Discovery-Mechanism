<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.tpvision.serverclient"
    android:installLocation="auto" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.android.tpvision.serverclient.MyServerActivity"
            android:label="@string/app_name" >

        </activity>
        <activity
            android:name="com.android.tpvision.serverclient.MyClientActivity"
            android:label="@string/title_activity_sam_client" >

        </activity>
        <activity
            android:name="com.android.tpvision.serverclient.LauncherActivity"
            android:label="@string/title_activity_launcher" >

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
    </application>

</manifest>
